{
  "name": "@aduduk-altir/a-core",
  "version": "1.1.1",
  "private": true,
  "dependencies": {},
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "configs",
    "utils"
  ],
  "scripts": {
    "start": "webpack serve --open --hot --config webpack/webpack.config.js --env env=dev",
    "build": "webpack --config webpack/webpack.config.js --env env=prod",
    "see:prod": "cd build && npx serve",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "e2e": "npx playwright test",
    "lint": "eslint ./src/**/*.{js,jsx,ts,tsx} --format=table && prettier --check src/**/*.{js,ts,tsx}",
    "prepare": "husky install",
    "postinstall": "tsc"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --rule '{\"no-console\":[\"error\",{\"allow\":[\"info\",\"warn\",\"error\",\"group\",\"groupCollapsed\",\"groupEnd\"]}]}' -f table"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.7",
    "@types/node": "^18.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "dotenv-webpack": "^7.1.0",
    "fork-ts-checker-webpack-plugin": "^7.2.11",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.1",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "4.3.5",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.9.2",
    "webpack-merge": "^5.8.0",
    "workbox-webpack-plugin": "^6.5.3"
  }
}
